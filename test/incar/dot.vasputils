--- # vim: syntax=yaml

incar:
  base:
    SYSTEM:  "Generated by VaspUtils::Incar"
    PREC:    "High"
    NELM:    60
    NELMIN:  2
    EDIFF:   1.0e-05
    VOSKOWN: 1
    NBLOCK:  1
    INIWAV:  1
    ISTART:  1
    ICHARG:  1
    LWAVE:   false
    LCHARG:  false
    IALGO:   38
    LREAL:   "Auto"
    ISMEAR:  -5 #tetrahedron method with Bl√∂chl corrections

  singlepoint:
    IBRION:  -1
    NSW:     0

  inner_relax:
    IBRION:  2
    NSW:     100
    ISIF:    2
    EDIFFG:  -0.02

  full_relax:
    IBRION:  2
    NSW:     100
    ISIF:    3
    EDIFFG:  -0.02

  spin1:
    ISPIN:   1

  spin2:
    ISPIN:   2

  metal_geomopt:
    ISMEAR:  1 #method of Methfessel-Paxton order 1
    SIGMA:   0.1

  non_metal_geomopt:
    ISMEAR:  0 #Gaussian smearing
    SIGMA:   0.1

