items = setting["incar_default"]
#potcar = VaspUtils::Potcar.parse["ENMAX"] * 1.3
#items["ENCUT"] = VaspUtils::Potcar.parse["ENMAX"] * 1.3
items["ENCUT"] = encut

VaspUtils::Incar.dump(items, STDOUT)
