#! /usr/bin/env ruby
# coding: utf-8

require "vasputils"
require 'thor'

class IncarCommand < Thor
  desc "generate [option] argument...", "Generate INCAR"
  #option :opt
  def generate(*args)


    #= を含む文字列は左のタグに右の値を入れる。
    #それ以外の文字列は、setting から取得する。

    encut = ARGV[0].to_i
    if encut == 0
      puts "ENCUT must be indicated as an argument."
      exit
    end

    setting = VaspUtils::Setting.new
    items = setting["incar_default"]
    items["ENCUT"] = encut

    VaspUtils::Incar.dump(items, STDOUT)
  end
end

IncarCommand.start(ARGV)

