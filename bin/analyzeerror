  op.on("-l"  , "--long"        , "Output in long format." ){ OPTIONS[:long] = true }
op.parse!(ARGV)

unless ARGV.size == 0
  puts "NOTE: need check coefficients. Option help, calculation, output."
  puts "USAGE: This script analyze subdirs of current dir; not use argument."
  puts "Exit."
  exit
end

dir = ENV['PWD']
analyzer = VaspUtils::ConditionAnalyzer::Analyzer.new(dir)
cross_points = analyzer.cross_points
finest_point = cross_points.min_by {|point| analyzer.expected_error(point) }

puts "Finest error is found at #{point.to_s}"
analyzer.expected_error(point)


if OPTIONS[:long]
  conditions = finest_point.keys
  conditions.each do |condition|
    #fix_cond = conditions.delete condition
    #analyzer.
    puts "TODO"
  end
end






